const width = 125;
const height = 125;

function elipse(x, y, r, p,h,v) {
  //x = center x coord
  //y = center y coord
  //r = radius w/ dilation factor = 1
  //p = poly (how many sides but not actually how many sides)
  //h = horizontal dilation
  //v = vertical dilation
  var points = [];
  for (let i = 0; i <= Math.PI * 2 ; i += 1 / p) {
    points.push([x - h * r * Math.cos(i), y - v * r * Math.sin(i)]);
  }
  points.push([x - h * r * Math.cos(0), y -v * r * Math.sin(0)]);
  return points;
}

var finalLines = elipse(75,75,10,5,1,0.25);
finalLines = finalLines.concat(elipse(75,75,10,5,0.5,1));
drawLines([finalLines]);
